<div class="row content">
    <div class="col-sm-2 sidenav">
      <h4>{{user.username}} Photos</h4>
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="#all" data-toggle="pill">All</a></li>
        <li><a href="#self" data-toggle="pill">Self</a></li>
        <li><a href="#shared" data-toggle="pill">Shared</a></li>
        <li><a href="#photoupload" data-toggle="pill">Photo Upload</a></li>
      </ul><br>
    </div>

    <div class="col-sm-10">
        <div class="tab-content">
            <div id="all" class="tab-pane fade in active">
                <div class="row">
                    {{#each photos_self}}
                        <div class="col-md-1">
                            <a href={{photoUrl}} class="thumbnail" data-lightbox="gallery" data-title={{name}}>
                               <img src={{photoUrl}} alt="..." class="img-thumbnail" style="width: 100%; height: 100px; display: block">
                            </a>
                            <div class="title">{{name}}</div>
                         </div>
                    {{/each}}

                    {{#each photos_shared}}
                        <div class="col-md-1">
                           <a href={{photoUrl}} class="thumbnail" data-lightbox="gallery" data-title={{name}}>
                              <img src={{photoUrl}} alt="..." class="img-thumbnail" style="width: 100%; height: 100px; display: block">
                           </a>
                           <div class="title">{{name}}</div>
                        </div>
                    {{/each}}
                </div> <!-- row -->
            </div>

            <div id="self" class="tab-pane fade">
                <div class="row">
                    {{#each photos_self}}
                        <div class="col-md-1">
                           <a href={{photoUrl}} class="thumbnail" data-lightbox="gallery" data-title={{name}}>
                              <img src={{photoUrl}} alt="..." class="img-thumbnail" style="width: 100%; height: 100px; display: block">
                           </a>
                           <div class="title">{{name}}</div>
                        </div>
                     {{/each}}
                </div> <!-- row -->
            </div>

            <div id="shared" class="tab-pane fade">
                 <div class="row">
                     {{#each photos_shared}}
                         <div class="col-md-1">
                             <a href={{photoUrl}} class="thumbnail" data-lightbox="gallery" data-title={{name}}>
                               <img src={{photoUrl}} alt="..." class="img-thumbnail" style="width: 100%; height: 100px; display: block">
                             </a>
                             <div class="title">{{name}}</div>
                         </div>
                     {{/each}}
                 </div> <!-- row --> 
            </div>

            <div id="photoupload" class="tab-pane fade">
                <div class="well">
                   <h2>Photo Upload</h2>
                   {{#if errors}}
                      {{#each errors}}
                         <div class="alert alert-danger">{{msg}} </div>
                      {{/each}}
                   {{/if}}
                    <br>
                    <form action="photoupload" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                           <label>Title:</label>
                           <input type="text" class="form-control"  name="Title" placeholder='Title' required>
                        </div>  

                        <div class="form-group">
                           <label>Name:</label>
                           <input type="text" class="form-control"  name="Name" placeholder='Name' required>
                        </div>

                        <div class="form-group">
                            <label>Access:</label>
                            <select name="Access" style="color:red">
                                    <option value="self" selected>self</option>
                                    <option value="shared">shared</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Photo Image:</label>
                            <input type="file" class="form-control"  name="profileimage" accept="image/*" required>
                        </div>
          
                        <button type="submit" class="btn btn-primary">Upload</button>
                     </form>
                 </div>  <!-- well -->
            </div>

        </div> <!-- tab-content -->
    </div> <!-- col end -->
</div> <!-- row end -->
