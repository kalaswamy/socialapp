<div class="row content">
    <div class="col-sm-3 sidenav">
      <h4>{{user.username}} Blog</h4>
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="#All" data-toggle="pill">All</a></li>
        <li><a href="#Self" data-toggle="pill">Self</a></li>
        <li><a href="#Post" data-toggle="pill">Post</a></li>
        <li><a href="#Photo" data-toggle="pill">Photos</a></li>
      </ul><br>
      <!--
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search Blog..">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">
            <span class="glyphicon glyphicon-search"></span>
          </button>
        </span>
      </div>
      -->
    </div>

    <div class="col-sm-9">
        <div class="tab-content">
            <div id="All" class="tab-pane fade in active">
              {{#each allblogs}}
                <div class="well blog-post">
                  <h2>{{title}}</h2>
                  <h5><span class="glyphicon glyphicon-time"></span> Post by {{name}}, {{createdate}}.</h5>
                  {{#if photoUrl}}
                     <img src={{photoUrl}} class="img-responsive">
                  {{/if}}
                  <p>{{content}}</p>
                  <a class="btn btn-primary" data-toggle="collapse" data-target="#{{_id}}" >Read More <span class="glyphicon glyphicon-chevron-right"></a>
                  <div id="{{_id}}" class="collapse">
                      <h4>Leave a Comment:</h4>
                      <form role="form" action="commentupload" method="post">
                          <div class="form-group">
                              <textarea class="form-control" rows="3" name="comment" required></textarea>
                          </div>
                          <input type="hidden" name="blogId" value={{_id}}>
                          <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                      <br>
                      <p><span class="badge">{{commentCount}}</span> Comments:</p><br>
                      {{#each comments}}
                          <div class="row">
                              <div class="col-sm-2 text-center">
                                  <img src={{profileimage}} class="img-circle" height="65" width="65" alt="Avatar">
                              </div>
                              <div class="col-sm-10">
                                  <h4>{{name}} <small>{{createdate}}</small></h4>
                                   <p>{{content}}</p>
                                   <br>
                              </div>
                          </div>
                      {{/each}}
                  </div>
                </div>
              {{/each}}
            </div>

            <div id="Self" class="tab-pane fade">
                {{#each selfblogs}}
                <div class="well blog-post">
                  <h2>{{title}}</h2>
                  <h5><span class="glyphicon glyphicon-time"></span> Post by {{name}}, {{createdate}}.</h5>
                  {{#if photoUrl}}
                     <img src={{photoUrl}} class="img-responsive">
                  {{/if}}
                  <p>{{content}}</p>
                  <a class="btn btn-primary" data-toggle="collapse" data-target="#{{_id}}a" >Read More <span class="glyphicon glyphicon-chevron-right"></a>
                  <a class="btn btn-primary" href="deleteblog/{{_id}}">Delete</a>
                  <div id="{{_id}}a" class="collapse">
                      <h4>Leave a Comment:</h4>
                      <form role="form" action="commentupload" method="post">
                          <div class="form-group">
                              <textarea class="form-control" rows="3" name="comment" required></textarea>
                          </div>
                          <input type="hidden" name="blogId" value={{_id}}>
                          <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                      <br>
                      <p><span class="badge">{{commentCount}}</span> Comments:</p><br>
                      {{#each comments}}
                          <div class="row">
                              <div class="col-sm-2 text-center">
                                  <img src={{profileimage}} class="img-circle" height="65" width="65" alt="Avatar">
                              </div>
                              <div class="col-sm-10">
                                  <h4>{{name}} <small>{{createdate}}</small></h4>
                                   <p>{{content}}</p>
                                   <br>
                              </div>
                          </div>
                      {{/each}}
                  </div>
                </div>
              {{/each}}
            </div>

            <div id="Photo" class="tab-pane fade">
                <div class="row">
                    <h1>Photos</h1>
                     {{#each allblogs}}
                       {{#if photoUrl}}
                         <div class="col-md-1">
                             <a href={{photoUrl}} class="thumbnail" data-lightbox="gallery" data-title={{name}}>
                               <img src={{photoUrl}} alt="..." class="img-thumbnail" style="width: 100%; height: 100px; display: block">
                             </a>
                             <div class="title">{{title}}</div>
                         </div>
                       {{/if}}
                     {{/each}}
                 </div> <!-- row --> 
            </div>

            <div id="Post" class="tab-pane fade">
                <div class="well">
                    <form action="blogupload" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            <label>Blog Title:</label>
                            <input type="text" class="form-control"  name="title" placeholder='Title' required>
                        </div>  

                        <div class="form-group">
                           <label>Blog Content:</label>
                           <textarea class="form-control" rows="3" name="content" required></textarea>
                        </div>

                        <div class="form-group">
                           <label>Photo Image:</label>
                           <input type="file" class="form-control"  name="profileimage" accept="image/*" >
                        </div>

                        <button type="submit" class="btn btn-primary">Upload</button>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- col end -->
</div> <!-- row end -->