<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>IIT Kharagpur</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <nav class="navbar navbar-inverse">
       <div class="container-fluid">
         <div class="navbar-header">
           <a class="navbar-brand" href="#">IIT Kharagpur</a>
         </div>

         <ul class="nav navbar-nav">
            {{#if index_active}}
               <li class="active"><a href="index"><span class="glyphicon glyphicon-home"></span>Home</a></li>
            {{else}}
               <li><a href="index"><span class="glyphicon glyphicon-home"></span>Home</a></li>
            {{/if}}

            {{#if contact_active}}
               <li class="active"><a href="contact"><span class="glyphicon glyphicon-envelope">Contact</a></li>
            {{else}}
               <li><a href="contact"><span class="glyphicon glyphicon-envelope">Contact</a></li>
            {{/if}}

            
         </ul>

         <ul class="nav navbar-nav navbar-right">
             {{#if user}}
                 <li><a href="#">{{user.username}}</a></li>
                 <li><a href="logout">logout</a></li>
             {{else}}
                 {{#if signup_active}}
                     <li class="active"><a href="signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                 {{else}}
                     <li><a href="signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                 {{/if}}

                 {{#if login_active}}
                     <li class="active"><a href="login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                 {{else}}
                     <li><a href="login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                 {{/if}}
             {{/if}}
         </ul>
        </div>
    </nav>

    {{#if user}}
      <div class="container-fluid">
        <div class="row">
           <div class="col-md-2">
                <div class="list-group">
                    {{#if profile_active}}
                        <a href="profile" class="list-group-item active">Profile</a>
                    {{else}}
                        <a href="profile" class="list-group-item">Profile</a>
                    {{/if}}
                    {{#if member_active}}
                        <a href="member" class="list-group-item active">Members</a>
                    {{else}}
                        <a href="member" class="list-group-item">Members</a>
                    {{/if}}
                    <a href="#" class="list-group-item">Gallery</a>
                    <a href="#" class="list-group-item">Blog</a>
                    <a href="#" class="list-group-item">Chat</a>
                    {{#if request_active}}
                        <a href="request" class="list-group-item active">Requests</a>
                    {{else}}
                        <a href="request" class="list-group-item">Requests</a>
                    {{/if}}
                </div>
           </div>
           <div class="col-md-10">
               {{{body}}}
           </div>
        </div>
      </div>
    {{else}}
        {{{body}}}
    {{/if}}


    <hr>

    <div class="container">
      <footer>
        <p>&copy; 2016 Company, Inc.</p>
      </footer>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>